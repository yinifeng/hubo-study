	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	<jaxws:endpoint id="hello1WS" implementor="com.hubo.cxf.demo1.HelloWSImpl"
		address="/hello1WS" >
	</jaxws:endpoint>
	

</beans>
